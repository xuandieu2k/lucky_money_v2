<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_main"
    android:background="@drawable/bg_gradient_custom"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/dp_4">
    <TextView
        android:id="@+id/tvTitle"
        android:background="@drawable/top_bg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:fontFamily="@font/great_vibes_regular"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dp_48"
        android:paddingHorizontal="@dimen/dp_32"
        android:paddingVertical="@dimen/dp_16"
        android:text="Vòng quay may mắn"
        android:textColor="@android:color/white"
        android:textSize="@dimen/sp_28"
        android:layout_alignParentTop="true"
        android:textStyle="bold" />

    <vn.xdeuhug.luckywheel.LuckyWheelView
        android:id="@+id/luckyWheel"
        android:layout_width="@dimen/dp_360"
        android:layout_height="@dimen/dp_360"
        android:layout_centerInParent="true"
        app:lkwBackgroundColor="#FF9800"
        app:lkwCenterImage="@null"
        app:lkwCursor="@drawable/ic_cursor"
        app:lkwTopTextColor="#263238" />

    <Button
        android:id="@+id/play"
        android:layout_marginBottom="@dimen/dp_16"
        android:textSize="@dimen/sp_20"
        android:textColor="@android:color/white"
        android:text="Nhận lì xì"
        android:fontFamily="@font/great_vibes_regular"
        android:textStyle="bold"
        android:background="@drawable/button_rounded_rectangle"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_width="@dimen/dp_160"
        android:layout_height="wrap_content" />
</RelativeLayout>
